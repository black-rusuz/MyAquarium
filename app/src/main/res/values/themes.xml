<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MyAquarium" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/text_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor"
            tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionBarSize">0dp</item>
    </style>

    <!-- Buttons -->
    <style name="Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/margin_half</item>
        <item name="android:paddingRight">@dimen/margin_half</item>
    </style>

    <style name="Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_rounded_10dp</item>
    </style>

    <style name="Button.Colored.Light">
        <item name="android:textColor">@color/accent</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/accent</item>
        <item name="android:backgroundTint">@color/accent_light</item>
    </style>

    <style name="Button.Colored.Dark">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/white</item>
        <item name="android:backgroundTint">@color/accent</item>
    </style>

    <style name="Button.Colored.Dark.Save">
        <item name="android:text">@string/save</item>
        <item name="android:drawableStart">@drawable/ic_save</item>
    </style>

    <style name="Button.Text">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:padding">0dp</item>

        <item name="android:textColor">@color/text_dark</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Button.Text.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Button.Text.ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">start|left|center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button.Back">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:drawableEnd">@drawable/ic_back</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/text_dark</item>
    </style>

    <!-- TextViews -->
    <style name="TextView">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextView.Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextView.Text.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="TextView.Text.Dark">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="TextView.Accent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>

    <style name="TextView.Accent.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="TextView.Accent.Dark">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <!-- EditTexts -->
    <style name="EditText">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_rounded_10dp_border_dark</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditText.Add">
    </style>

    <style name="EditText.Add.Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText.Add.Text.Coded">
        <item name="android:ems">100</item>
        <item name="android:hint">Название</item>
    </style>

    <style name="EditText.Add.Num">
        <item name="android:layout_width">0dp</item>
        <item name="android:hint">0</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditText.Add.Num.Coded">
        <item name="android:ems">2</item>
        <item name="android:hint">0</item>
    </style>

    <!-- ImageViews -->
    <style name="ImageView">
    </style>

    <!-- Layouts -->
    <style name="LinearLayout"></style>
    <style name="LinearLayout.Border">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/help_border</item>
        <item name="android:layout_marginTop">@dimen/margin_text</item>
        <item name="android:layout_marginBottom">@dimen/margin_text</item>
    </style>

    <style name="ConstraintLayout"></style>
    <style name="ConstraintLayout.LL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_half</item>

    </style>
    <style name="ConstraintLayout.Card">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/bg_rounded_20dp</item>
    </style>

    <style name="ConstraintLayout.Card.Dark">
        <item name="android:backgroundTint">@color/accent</item>
    </style>

    <style name="ConstraintLayout.Card.Light">
        <item name="android:backgroundTint">@color/accent_light</item>
    </style>

</resources>