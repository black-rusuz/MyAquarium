<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MyAquarium" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/text_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor"
            tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionBarSize">0dp</item>
    </style>

    <!-- Buttons -->
    <style name="Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_rounded_10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="Button.Light" parent="Button">
        <item name="android:textColor">@color/accent</item>
        <item name="android:backgroundTint">@color/accent_light</item>
    </style>

    <style name="Button.Dark" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/accent</item>
    </style>

    <style name="Button.Text" parent="Button">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">0dp</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- TextViews -->
    <style name="TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.Header" parent="TextView">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextView.Text" parent="TextView">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="TextView.Text.Light" parent="TextView.Text">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="TextView.Text.Dark" parent="TextView.Text">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <!-- ImageViews -->
    <style name="ImageView">
    </style>

</resources>